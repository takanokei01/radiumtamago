<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="android.Page4"
             Title="Page4">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
         
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" Grid.ColumnSpan="5" Grid.RowSpan="7"/>

        <Label Grid.Column="1" Grid.ColumnSpan="3"
        Text=" 地震はそれだけでは止まらず、2011年3月11日だけでも最大震度4以上の余震が55回発生し、3月31日まででは113回もの大きな余震が発生しました。"
            FontSize="20"/>
        <Image Grid.Row="1" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="3"
            WidthRequest="400"
            Source="gareki.png" />

        <Label  Grid.Column ="1" Grid.ColumnSpan="3" Grid.Row="5" Grid.RowSpan="3"
          Text="2021年に宮城、福島県で発生した最大深度6今日の地震も東日本大震災の余震と言われており、余震活動は年々減ってきていますが、終わったわけではありません。"
          TextColor="Black"             
          FontSize="20"/>

        <Button Grid.Column="1" Grid.Row="6"       
          Text="進む"
          TextColor="Black"
          WidthRequest="100"
         HeightRequest="40"
         Clicked="OnClicked"
         Background="White"
         BorderWidth="2" BorderColor="Black"/>
        <Button Grid.Column="3" Grid.Row="6"       
          Text="終了"
          TextColor="Black"
          WidthRequest="100"
          HeightRequest="10"
          Clicked="OnClicked2"              
          Background="White"
          BorderWidth="2" BorderColor="Black"/>

    </Grid>
</ContentPage>